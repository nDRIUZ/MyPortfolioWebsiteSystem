@page "/ALogin/ForgotPassword"
@model ForgotPasswordModel
@{
    Layout = "";
    ViewData["Title"] = "Forgot your password?";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - My Portfolio Website</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body class="vh-100 my-0">
    <div class="container h-100">
        <main role="main" class="h-100">
            <div class="row h-100">
                <div class="col-md-5 border py-2 px-4 my-auto mx-auto">
                    <form method="post">
                        <h4>@ViewData["Title"]</h4>
                        <h5>Enter your email</h5>
                        <hr />
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Input.Email"></label>
                            <input asp-for="Input.Email" class="form-control" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
                    <div class="form-group pt-2">
                        <p>
                            <a id="login" asp-page="Login">Log in</a>
                        </p>
                        <p>
                            <a asp-area="" asp-controller="Home" asp-action="Index">Back to homepage</a>
                        </p>
                    </div>
                </div>
            </div>

        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>