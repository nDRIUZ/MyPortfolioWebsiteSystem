@page "/Admin/Skills"
@model SkillsModel
@{
    ViewData["Title"] = "Add/Remove skills";
    ViewData["ActivePage"] = ManageNavPages.Skills;
    int counter = 0;
}

<h4>@ViewData["Title"]</h4>
<partial name="_StatusMessage" for="StatusMessage" />

<div class="row">
    <div class="col-md-6">
        <form id="welcome-page-form" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.SkillName"></label>
                <input asp-for="Input.SkillName" class="form-control" />
                <span asp-validation-for="Input.SkillName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.SkillPercentage"></label>
                <input asp-for="Input.SkillPercentage" class="form-control" />
                <span asp-validation-for="Input.SkillPercentage" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Add skill</button>
        </form>
    </div>
</div>

@if (Model.Skills != null)
{
<div class="row pt-2">
    @foreach (var item in Model.Skills)
    {
        if (counter != 0 && counter % 3 == 0)
        {
        @:</div>
        @:<div class="row">
        }
              <div class="col-md-4">
                  <div class="progress">
                      <div class="progress-bar progress-bar-striped bg-success" role="progressbar" style="width: @item.SkillPercentage%" aria-valuenow="@item.SkillPercentage" aria-valuemin="0" aria-valuemax="100"></div>
                  </div>
                  <p>
                      @item.SkillName
                      <form asp-page-handler="Delete" method="post">
                          <button onclick="return confirm('Are you sure you want to delete this skill?')" class="btn btn-danger btn-sm">Delete skill</button>
                          <input type="hidden" name="id" value="@item.Id" />
                      </form>
                  </p>
              </div>
        counter++;
    }
</div>
}


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}